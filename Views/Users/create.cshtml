@{
    ViewData["Title"] = "Создать пользователя";
}
@model UserModel
<div class="text-center">
    <h1 class="display-4">Добавление пользователя</h1>
    <form asp-action="edit" asp-controller="Users" method="post">
        <div class="row justify-content-center align-items-center g-2">
            <div class="mb-3 col-3">
                <label asp-for="Name" class="form-label">Имя</label>
                <input type="text" class="form-control" asp-for="Name" aria-describedby="helpId" placeholder="Иван Иванов"/>
                <small id="helpId" class="form-text text-muted"></small>
            </div>
        </div>
        <div class="row justify-content-center align-items-center g-2">
            <div class="mb-3 col-3">
                <label asp-for="Email" class="form-label">E-Mail</label>
                <input type="email" class="form-control" asp-for="Email" aria-describedby="helpId" placeholder="name@mail.com"/>
                <small id="helpId" class="form-text text-muted"></small>
            </div>
        </div>
        <div class="mb-3">
            <input type="submit" class="btn btn-primary" name="submit" value="Создать" />
        </div>
    </form>

</div>
